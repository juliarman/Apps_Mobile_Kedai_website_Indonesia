<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PaketDesain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relativid1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/backroundheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/linearlayout1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            <TextView
                android:paddingTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="25dp"
                android:text="Mengapa Membutuhkan Design?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="13dp"
                android:text="Usaha dengan brand identitas yang baik seperti nama dan logo membuat pondasi bisnis Anda menjadi kokoh untuk berkembang."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>




        <GridLayout
            android:id="@+id/gridlayout1"
            android:layout_below="@id/relativid1"
            android:layout_marginTop="-40dp"
            android:rowCount="2"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:layout_height="170dp">
                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageViewlogo"
                        android:background="@drawable/dlogo"
                        android:layout_width="130dp"
                        android:layout_height="130dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/imageViewlogo"
                        android:text="Desain Logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:layout_height="170dp">
                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageViewbrosur"
                        android:background="@drawable/dbrosur"
                        android:layout_width="130dp"
                        android:layout_height="130dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/imageViewbrosur"
                        android:text="Desain Brosur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageViewbanner"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/dbanner" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageViewbanner"
                        android:layout_centerInParent="true"
                        android:text="Desain Brosur"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageViewposter"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/dposter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageViewposter"
                        android:layout_centerInParent="true"
                        android:text="Desain Brosur"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageViewprofil"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/dprofil" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageViewprofil"
                        android:layout_centerInParent="true"
                        android:text="Desain Brosur"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/imageViewlabel"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/dlabel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageViewlabel"
                        android:layout_centerInParent="true"
                        android:text="Desain Brosur"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>



    <RelativeLayout
        android:padding="15dp"
        android:layout_below="@id/gridlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="#3378b8"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="35dp"
                android:text="Harga Desain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:lineSpacingExtra="@dimen/badge_height_padding"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="13dp"
                android:text="Terbukti Bahwa Visual di Konsumsi Oleh Otak 60.000 Lebih Cepat daripada Teks. Percayakan Jasa Design Anda Kepada Kami Desain Anda akan dibuat oleh team kami yang sudah profesional di bidang desain grafis. Sehingga Anda tidak perlu menghire tim desainer yang sangat mahal."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#3378b8"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:text="*Harga Mulai 99k (tergantung kerumitan dan jenisnya)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/pesandesain"
                android:layout_margin="30dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:textColor="#fff"
                android:background="@drawable/btn_pesansekarang"
                android:text="PESAN SEKARANG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>

    </RelativeLayout>


</ScrollView>