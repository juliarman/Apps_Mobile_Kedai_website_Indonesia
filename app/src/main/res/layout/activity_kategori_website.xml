<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".KategoriWebsite">


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/paketotomotifff"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/gambarinstansi"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:src="@drawable/otomotif" />
                <TextView
                    android:id="@+id/tv_instansi"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_below="@id/gambarinstansi"
                    android:text="@string/website_otomotif"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/desk_instansi"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textSize="17dp"
                        android:typeface="normal"
                        android:layout_below="@id/tv_instansi"
                        android:text="@string/khusus_untuk_anda_marketing_otomotif_website_merupakan_senjata_yang_sangat_ampuh_untuk_meningkatkan_target_penjualan_anda"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/paketotomotif"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/btn_selengkapnya"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/desk_instansi"
                        android:gravity="center"
                        android:text="SELENGKAPNYA"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/gambarotomotif"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:src="@drawable/instansi" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        android:layout_below="@id/gambarotomotif"
                        android:text="Website Instansi"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/desk_otomotif"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textSize="17dp"
                        android:typeface="normal"
                        android:layout_below="@id/tv_title"
                        android:text="@string/khusus_untuk_anda_marketing_otomotif_website_merupakan_senjata_yang_sangat_ampuh_untuk_meningkatkan_target_penjualan_anda"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/paketinstansi"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/btn_selengkapnya"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/desk_otomotif"
                        android:gravity="center"
                        android:text="SELENGKAPNYA"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/gambarbisnis"
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:src="@drawable/bisnis" />
                    <TextView
                        android:id="@+id/tv_bisnis"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        android:layout_below="@id/gambarbisnis"
                        android:text="Website Business"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/desk_bisnis"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textSize="17dp"
                        android:typeface="normal"
                        android:layout_below="@id/tv_bisnis"
                        android:text="@string/khusus_untuk_anda_marketing_otomotif_website_merupakan_senjata_yang_sangat_ampuh_untuk_meningkatkan_target_penjualan_anda"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_business"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/btn_selengkapnya"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/desk_bisnis"
                        android:gravity="center"
                        android:text="SELENGKAPNYA"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>


</ScrollView>