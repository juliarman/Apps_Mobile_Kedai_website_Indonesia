<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">


    <com.synnapps.carouselview.CarouselView

        android:id="@+id/slidenya"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"/>

    <LinearLayout
        android:layout_below="@+id/slidenya"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="16dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            android:layout_width="100dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/gambarinstansi"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="500dp"
                    android:src="@drawable/otomotif" />
                <TextView
                    android:id="@+id/tv_instansi"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_below="@id/gambarinstansi"
                    android:text="@string/paket_website"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="16dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            android:layout_width="100dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/gambardesign"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="500dp"
                    android:src="@drawable/otomotif" />
                <TextView
                    android:id="@+id/tv_design"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_below="@id/gambardesign"
                    android:text="@string/paket_website"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="16dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            android:layout_width="100dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/gambarseo"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="500dp"
                    android:src="@drawable/otomotif" />
                <TextView
                    android:id="@+id/tv_seo"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_below="@id/gambarseo"
                    android:text="@string/paket_website"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>

</RelativeLayout>