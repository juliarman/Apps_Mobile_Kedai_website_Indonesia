<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/list_root"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linear1"
        android:background="@drawable/namapaket"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nama_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Pro"
            android:textSize="20dp"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/jenis_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eccomerce Standar / One  Page"
            android:textSize="10dp"
            android:textColor="#ffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/harga_paket"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@+id/linear2"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/deskripsi_paket"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </org.sufficientlysecure.htmltextview.HtmlTextView>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear3"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <Button
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/btn_pesansekarang"
            android:padding="16dp"
            android:text="PESAN SEKARANG"
            android:textColor="#ffff"
            android:background="@drawable/design"
            android:layout_width="200dp"
            android:layout_height="50dp">

        </Button>

    </LinearLayout>
    </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>